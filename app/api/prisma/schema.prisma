generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  fullName  String
  role      UserRole @default(RESIDENT)

  provider   AuthProvider
  providerId String

  createdAt DateTime @default(now())

  building   Building?   @relation("BuildingManager")
  memberships Membership[]

  @@unique([provider, providerId])
}

model Building {
  id        String   @id @default(uuid())
  name      String
  address   String
  city      String
  imageUrl  String?
  createdAt DateTime @default(now())
  managerId String? @unique 
  user   User? @relation("BuildingManager", fields: [managerId], references: [id], onDelete: Restrict) 

  apartments     Apartment[]
  announcements  Announcement[]
  expenses       Expense[]
  votes          Vote[]
  memberships    Membership[]
}

model Apartment {
  id          String   @id @default(uuid())
  number      String
  floor       Int
  areaSqm     Float
  buildingId String
  createdAt  DateTime @default(now())

  building    Building   @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  voteResponses VoteResponse[]
}

model Membership {
  id           String   @id @default(uuid())
  userId       String
  isOwner      Boolean  @default(false)
  createdAt   DateTime @default(now())
  buildingId String

  user      User      @relation(fields: [userId], references: [id])
  building  Building  @relation(fields: [buildingId], references: [id])

  @@unique([userId, buildingId])
}

model Announcement {
  id         String   @id @default(uuid())
  title      String
  content    String
  buildingId String
  createdAt  DateTime @default(now())

  building Building @relation(fields: [buildingId], references: [id])
}

model Expense {
  id         String   @id @default(uuid())
  title      String
  amount     Float
  date       DateTime
  buildingId String
  createdAt  DateTime @default(now())

  building Building @relation(fields: [buildingId], references: [id])
}

model Vote {
  id         String   @id @default(uuid())
  title      String
  description String
  buildingId String
  status      VoteStatus  @default(DRAFT)
  createdAt  DateTime @default(now())

  building     Building     @relation(fields: [buildingId], references: [id])
  options      VoteOption[]
  responses    VoteResponse[]
}

model VoteOption {
  id     String @id @default(uuid())
  label  String
  voteId String
  options VoteResponse[]
  vote Vote @relation(fields: [voteId], references: [id])
}

model VoteResponse {
  id          String   @id @default(uuid())
  apartmentId String
  voteId      String
  optionId    String
  createdAt  DateTime @default(now())

  vote   Vote       @relation(fields: [voteId], references: [id])
  option VoteOption @relation(fields: [optionId], references: [id])
  apartment Apartment  @relation(fields: [apartmentId], references: [id])

  @@unique([apartmentId, voteId])
}

enum UserRole {
  ADMIN
  MANAGER
  RESIDENT
}

enum VoteStatus {
  DRAFT
  ACTIVE
  CLOSED
}

enum AuthProvider {
  GOOGLE
}